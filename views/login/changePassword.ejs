<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="initial-scale=1.0,maximum-scale=1.0,user-scalable=no">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <!-- Remove Tap Highlight on Windows Phone IE -->
    <meta name="msapplication-tap-highlight" content="no"/>

    <link rel="icon" type="image/png" href="/assets/img/logo5rsmart.png" sizes="16x16">
    <link rel="icon" type="image/png" href="/assets/img/logo5rsmart.png" sizes="32x32">

    <title>Login Page</title>

    <link href='http://fonts.googleapis.com/css?family=Roboto:300,400,500' rel='stylesheet' type='text/css'>

    <!-- uikit -->
    <link rel="stylesheet" href="/bower_components/uikit/css/uikit.almost-flat.min.css"/>

    <!-- altair admin login page -->
    <link rel="stylesheet" href="/assets/css/login_page.min.css" />

    <link rel="stylesheet" href="/assets/css/main.min.css" media="all">


</head>
<body class="md-bg-light-green-400 login_page">

  <div class="uk-form-row">
    <div class="uk-grid ">
    <div class="uk-width-medium-1 ">
      <br>

    <br><br><br>
      <div class="login_page_wrapper ">
      <div class="md-card" id="login_card">
          <div class="md-card-content large-padding " style="  height: 100%;"  id="login_form">
              <div class="login_heading">
                  <div class="user_avatar"></div>
              </div>
              <% if (error_messages) { %>
                  <div class="uk-alert uk-alert-danger" data-uk-alert>
                      <a href="#" class=""></a>
                      <%= error_messages %>
                  </div>
              <% } %>
              <% if (success_messages) { %>
                  <div class="uk-alert uk-alert-success" data-uk-alert>
                      <a href="#" class=""></a>
                      <%= success_messages %>
                  </div>
              <% } %>
              <form method="post" action="/changePassword">
                  <div class="uk-form-row">
                      <label for="changePassword">Password Baru</label>
                      <input class="md-input" type="password" id="changePassword" name="changePassword" />
                  </div>
                  <div class="uk-form-row">
                      <label for="changePassword">Password Saat Ini</label>
                      <input class="md-input" type="password" id="Password" name="Password" />
                  </div>

                  <div class="uk-margin-medium-top">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                      <button type="submit" class="md-btn md-btn-success md-btn-block md-btn-large">Ganti Password</button>
                  </div>
                  <h6 class="uk-text-middle  uk-text-center"><a class="uk-text-middle  uk-text-center" href="/">kembali ke dashboard</a></h6>

              </form>
          </div>
        </div>
      </div>
  <br>
  <br>
  <br>

  <br>

  </div>
  </div>


</div>



    <!-- common functions -->
    <script src="./assets/js/common.min.js"></script>
    <!-- altair core functions -->
    <script src="./assets/js/altair_admin_common.min.js"></script>

    <!-- altair login page functions -->
    <script src="./assets/js/pages/login.min.js"></script>

</body>
</html>
